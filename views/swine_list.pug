extends layout

block content
	div(class='alert alert-success' role='alert') There are !{number} swines currently in the database!
	table(class='table table-striped')
		thead(class='thead-dark')
			tr
				th Registration Number
				th Farm Name
				th Swine Breed
				th Sex
				th Birthyear
				th Weight at Data Collection
				th Age at Data Collection
				th Date Registered
				th Registered By
				th Average Daily Gain (Standardized)
				th Average Daily Gain (Actual)
				th Backfat Thickness (Standardized)
				th Backfat Thickness (Actual)
				th Feed Efficiency (Standardized)
				th Feed Efficiency (Actual)
				th Birth Weight
				th Total When Born (Male)
				th Total When Born (Female)
				th Total When Born (Standardized)
				th Littersize Born Alive (Actual)
				th Littersize Born Alive (Standardized)
				th Parity
				th Littersize at Weaning (Standardized)
				th Littersize at Weaning (Actual)
				th Litterweight at Weaning
				th Maternal Registration Number
				th Paternal Registration Number
		tbody
		each swine in data
			tr
				td #{swine.registration_number}
				td #{swine.farm_name}
				td #{swine.swine_breed}
				td #{swine.swine_sex}
				td #{swine.birthyear}
				td #{swine.weight_at_data_collection}
				td #{swine.age_at_data_collection}
				td #{swine.date_registered}
				td #{swine.registered_by}
				td #{swine.standardized_ave_daily_gain}
				td #{swine.actual_ave_daily_gain}
				td #{swine.standardized_backfat_thickness}
				td #{swine.actual_backfat_thickness}
				td #{swine.standardized_feed_efficiency}
				td #{swine.actual_feed_efficiency}
				td #{swine.birth_weight}
				td #{swine.total_when_born_male}
				td #{swine.total_when_born_female}
				td #{swine.standardized_total_when_born}
				td #{swine.actual_littersize_born_alive}
				td #{swine.standardized_littersize_born_alive}
				td #{swine.parity}
				td #{swine.standardized_littersize_at_weaning}
				td #{swine.actual_littersize_at_weaning}
				td #{swine.litterweight_at_weaning}
				td #{swine.maternal}
				td #{swine.paternal}